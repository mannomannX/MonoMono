#!/bin/bash
# ==============================================================================
# MONOMONO-DISCONNECT v1.3 (Final & Intelligent)
# ==============================================================================
# Trennt ausgewÃ¤hlte Sub-Repos UND aktualisiert den Haupt-Workflow.
# ==============================================================================

auth_check() {
    if ! gh auth status >/dev/null 2>&1; then
        echo "âš ï¸  Du scheinst nicht bei der GitHub CLI angemeldet zu sein."
        read -p "? Soll 'gh auth login' jetzt ausgefÃ¼hrt werden? (j/n) " choice
        if [[ "$choice" =~ ^[YyJj]$ ]]; then gh auth login; else echo "âŒ Abbruch."; exit 1; fi
    fi
    GITHUB_USER=$(gh api user --jq .login)
    echo "âœ” Authentifiziert als '$GITHUB_USER'."
}

# --- HAUPTLOGIK ---
auth_check

# 1. Ziel-Repo abfragen
read -p "? Von welchem Fusions-Repo soll getrennt werden? (Format: user/repo): " FUSION_REPO
FUSION_REPO=$(echo "$FUSION_REPO" | xargs)
if [ -z "$FUSION_REPO" ]; then echo "âŒ Abbruch: Kein Repo angegeben."; exit 1; fi

# 2. PAT fÃ¼r alle API-Operationen abfragen
echo "--------------------------------------------------------------------"
echo "ðŸ”‘ INFO: Ein persÃ¶nlicher Zugriffstoken (PAT) wird benÃ¶tigt."
echo "â€¼ï¸  WICHTIG: Der Token braucht die Scopes 'repo' UND 'workflow'."
echo "--------------------------------------------------------------------"
PAT=""
while [ -z "$PAT" ]; do
    read -s -p "ðŸ‘‰ Bitte fÃ¼ge den kopierten Token hier ein und drÃ¼cke ENTER: " PAT; echo
done
SCOPES=$(curl -s -H "Authorization: token $PAT" https://api.github.com/ -I | grep -i x-oauth-scopes | sed 's/x-oauth-scopes: //g' | tr -d '\r')
if ! [[ "$SCOPES" == *"repo"* && "$SCOPES" == *"workflow"* ]]; then
    echo "âŒ FEHLER: Der Token hat nicht die erforderlichen Scopes 'repo' und 'workflow'." >&2
    exit 1
fi
echo "âœ” Access Token ist gÃ¼ltig."

# 3. Bestehende Konfiguration auslesen
echo "-> Lese die aktuelle Konfiguration aus '$FUSION_REPO'..."
WORKFLOW_RESPONSE=$(GH_TOKEN=$PAT gh api "repos/$FUSION_REPO/contents/.github/workflows/sync.yml" 2>/dev/null)
if ! echo "$WORKFLOW_RESPONSE" | jq -e '.sha' > /dev/null; then
    echo "âŒ Fehler: Konnte 'sync.yml' im Repo '$FUSION_REPO' nicht lesen." >&2
    exit 1
fi
WORKFLOW_CONTENT=$(echo "$WORKFLOW_RESPONSE" | jq -r .content | base64 --decode)
WORKFLOW_SHA=$(echo "$WORKFLOW_RESPONSE" | jq -r .sha)
SUB_REPOS_OLD=$(echo "$WORKFLOW_CONTENT" | grep -oP "for repo in \\\$\(echo '([^']*)'" | head -n1 | sed -E "s/for repo in \\\$\(echo '([^']*)'/\1/")

if [ -z "$SUB_REPOS_OLD" ]; then
    echo "â„¹ï¸  Es sind keine Sub-Repos mit diesem Fusions-Repo verbunden."
    exit 0
fi

# 4. Interaktive Auswahl der zu trennenden Repos
echo "-> WÃ¤hle die zu trennenden Sub-Repos:"
REPOS_TO_DISCONNECT=$(echo "$SUB_REPOS_OLD" | tr ',' '\n' | fzf --multi --prompt="Trennen> ")
if [ -z "$REPOS_TO_DISCONNECT" ]; then echo "âŒ Abbruch: Keine Repos ausgewÃ¤hlt."; exit 1; fi

# 5. Trennungslogik
for repo in $REPOS_TO_DISCONNECT; do
    echo "-> Trenne $repo..."
    GH_TOKEN=$PAT gh secret delete MONOMONO_FUSION_REPO --repo "$repo"
    GH_TOKEN=$PAT gh secret delete MONOMONO_APP_TOKEN --repo "$repo"

    SHA_TRIGGER=$(GH_TOKEN=$PAT gh api "repos/$repo/contents/.github/workflows/monomono-trigger.yml" --jq .sha 2>/dev/null)
    if [ -n "$SHA_TRIGGER" ]; then
        GH_TOKEN=$PAT gh api --method DELETE "repos/$repo/contents/.github/workflows/monomono-trigger.yml" -f message="build: Remove monomono trigger" -f sha="$SHA_TRIGGER" >/dev/null
    fi
done

# 6. Haupt-Workflow aktualisieren
echo "-> Aktualisiere Haupt-Workflow in '$FUSION_REPO'..."
SUB_REPOS_NEW=$(echo ",$SUB_REPOS_OLD," | sed "s/,$(echo $REPOS_TO_DISCONNECT | sed 's/ /|/g'),/,/g" | sed 's/^,//;s/,$//')

if [ -n "$SUB_REPOS_NEW" ]; then
    NEW_WORKFLOW_CONTENT=$(echo "$WORKFLOW_CONTENT" | sed "s/'$SUB_REPOS_OLD'/'$SUB_REPOS_NEW'/")
    GH_TOKEN=$PAT gh api --method PUT "repos/$FUSION_REPO/contents/.github/workflows/sync.yml" \
       -f message="build: Disconnect sub-repo(s)" \
       -f content="$(echo -n "$NEW_WORKFLOW_CONTENT" | base64)" \
       -f sha="$WORKFLOW_SHA" >/dev/null
    echo "âœ” Haupt-Workflow wurde aktualisiert, um entfernte Repos zu reflektieren."
else
    # Alle Repos wurden getrennt, wir lÃ¶schen den Workflow
    GH_TOKEN=$PAT gh api --method DELETE "repos/$FUSION_REPO/contents/.github/workflows/sync.yml" \
       -f message="build: Remove final monomono workflow" \
       -f sha="$WORKFLOW_SHA" > /dev/null
    echo "âœ” Alle Repos getrennt. Haupt-Workflow wurde entfernt."
fi

echo "âœ… AusgewÃ¤hlte Sub-Repos erfolgreich getrennt."